[user]
	name = Kazuki Nishikawa
	email = kz.nishikawa@gmail.com
[color]
	ui = auto
[core]
	excludesfile = /home/kazuki/.gitignore
	autocrlf = false
	hooksPath = /home/kazuki/git-hooks/hooks
[alias]
	co = checkout
	br = branch
	st = status --short --branch
	ci = commit -v
	lg = log --graph --pretty=oneline --decorate
	ls = log --oneline --stat
	l1 = log --oneline
	pick = cherry-pick
[commit]
	template = ~/.gitmessage
[init]
	defaultBranch = main
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
